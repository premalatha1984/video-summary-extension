{
  "manifest_version": 3,
  "name": "Video Summary Extension",
  "version": "1.0",
  "description": "Get video summary",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "audioCapture",
    "videoCapture"
  ],
  "background": {
    "service_worker": "background.js"
  }
}